<h1 class="text-center pb-4">{{titulo}}</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <div>
                <h3 class="mx-3">Agregar Prodicto</h3>
            </div>
            <div class="row">
                <form id="formAgregarProductos" class="m-3 d-grid">
                    <input type="text" class="form-control" name="category" id="category" placeholder="category">
                    <input type="text" class="form-control" name="title" id="title" placeholder="title">
                    <input type="number" class="form-control" name="price" id="price" placeholder="price">
                    <input type="number" class="form-control" name="stock" id="stock" placeholder="stock">
                    <input type="text" class="form-control" name="code"  id="code" placeholder="code">
                    <input type="text" class="form-control" name="thumbnail" id="thumbnail" placeholder="thumbnail">
                    <input type="text" class="form-control" name="description" id="description" placeholder="description">
                    <button type="submit" class="btn btn-primary">Agregar Producto</button>
                </form>
            </div>
        </div>
        <div class="col">
            <div>
                <h3 class="mx-3">Eliminar Producto</h3>
            </div>
            <div class="row">
                <form id="formEliminarProductos" class="m-3 d-grid">
                    <input type="number" class="form-control" id="borrarPodId" placeholder="Id del Producto a eliminar">
                    <button type="submit" class="btn btn-primary">Eliminar Producto</button>
                </form>
            </div>
        </div>
    </div>
</div>
